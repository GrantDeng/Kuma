<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:background="#46ad13"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:baselineAligned="false"
            android:weightSum="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/back_button"
                android:background="#46ad13"
                android:src="@mipmap/ic_keyboard_arrow_left_white_24dp"
                android:clickable="true"
                android:minWidth="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Shopping List"
                android:id="@+id/shoplist_title"
                android:layout_weight="0.52"
                android:layout_gravity="bottom|left|right|top"
                android:textColor="#ffffff"
                android:typeface="sans"
                android:textSize="24dp"
                android:textIsSelectable="false"
                android:paddingTop="10dp"
                android:minWidth="250dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/setting"
                android:src="@mipmap/ic_settings_white_24dp"
                android:background="#45ac12"
                android:clickable="true"
                android:minWidth="50dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.32">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/pantry_button"
                android:src="@mipmap/ic_kitchen_white_36dp"
                android:background="#45ac13"
                android:minWidth="95dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/shoplist_button"
                android:src="@mipmap/ic_playlist_add_check_white_36dp"
                android:background="#45ab12"
                android:minWidth="95dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/plan_button"
                android:src="@mipmap/ic_date_range_white_36dp"
                android:minWidth="95dp"
                android:background="#46ad13" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/input_button"
                android:src="@mipmap/ic_camera_alt_white_36dp"
                android:minWidth="95dp"
                android:background="#45ab12" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#46ad13"
            android:layout_marginTop="10dp">

            <SearchView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/searchView"
                android:layout_weight="1"
                android:background="#ffffff"
                android:inputType="text" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listView" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_item"
            android:baselineAlignBottom="false"
            android:clickable="true"
            android:src="@mipmap/ic_playlist_add_black_48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/abc_item_background_holo_light"
            android:minWidth="50dp"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

</LinearLayout>