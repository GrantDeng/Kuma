<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_gravity="center_horizontal"
    android:weightSum="1"
    android:background="#46ad13"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:baselineAligned="false"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="page_name"
            android:id="@+id/page_title"
            android:layout_weight="0.84"
            android:layout_gravity="bottom|left|right|top"
            android:textColor="#ffffff"
            android:typeface="sans"
            android:textSize="24dp"
            android:textIsSelectable="false"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/setting"
            android:src="@mipmap/ic_settings_white_24dp"
            android:background="#45ac12"
            android:clickable="true"
            android:minWidth="50dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.32"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/pantry_button"
            android:src="@mipmap/ic_kitchen_white_36dp"
            android:background="#45ac13"
            android:minWidth="90dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/shoplist_button"
            android:src="@mipmap/ic_playlist_add_check_white_36dp"
            android:background="#45ab12"
            android:minWidth="90dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/plan_button"
            android:src="@mipmap/ic_date_range_white_36dp"
            android:minWidth="90dp"
            android:background="#46ad13" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/input_button"
            android:src="@mipmap/ic_camera_alt_white_36dp"
            android:background="#45ab12"
            android:minWidth="90dp" />

    </LinearLayout>

</LinearLayout>