<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Chicken"
        android:id="@+id/ingredient_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxWidth="120dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/quantity"
        android:minWidth="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="150 g"
        android:id="@+id/quantity"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ingredient_name"
        android:layout_toEndOf="@+id/ingredient_name"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/quantity_level"
        android:maxWidth="120dp"
        android:minWidth="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Low"
        android:id="@+id/quantity_level"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/quantity"
        android:layout_toEndOf="@+id/quantity"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/imageButton"
        android:singleLine="false"
        android:gravity="center_vertical"
        android:maxWidth="120dp"
        android:minWidth="100dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_toRightOf="@+id/quantity_level"
        android:src="@android:drawable/ic_input_add"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>